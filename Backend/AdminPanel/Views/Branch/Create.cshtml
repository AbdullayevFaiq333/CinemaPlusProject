@model Branch


@{
    ViewData["Title"] = "Create";
}

<div class="content text-center">
    <div class="col-lg-5" style="display: inline-block">
        <div class="card">
            <div class="card-header header-elements-inline">
                <h5 class="card-title">Create Branch</h5>
            </div>

            <div class="card-body">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="Branch">
                    <select name="LanguageId" id="language" class="btn btn-light">
                        @foreach (var item in ViewBag.Languages)
                        {
                            <option value="@item.Id"> @item.Code</option>

                        }
                    </select>
                    <a asp-action="Index" class="btn btn-light">
                        Go Back
                    </a>

                    <div class="form-group form-group-float">
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input asp-for="Description" class="form-control" placeholder="Description">
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input asp-for="@Model.Contact.OurAddress" class="form-control" placeholder="Out Address">
                        <span class="text-danger" asp-validation-for="@Model.Contact.OurAddress"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input asp-for="@Model.Contact.Phone" class="form-control" placeholder="Phone">
                        <span class="text-danger" asp-validation-for="@Model.Contact.Phone"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input asp-for="@Model.Contact.Email" class="form-control" placeholder="Email">
                        <span class="text-danger" asp-validation-for="@Model.Contact.Email"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input asp-for="@Model.Contact.MediaSalesDepartment" class="form-control" placeholder="Media Sales Department">
                        <span class="text-danger" asp-validation-for="@Model.Contact.MediaSalesDepartment"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input asp-for="@Model.Contact.WorkingHours" class="form-control" placeholder="Working Hours">
                        <span class="text-danger" asp-validation-for="@Model.Contact.WorkingHours"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input asp-for="@Model.Contact.Map" class="form-control" placeholder="Map">
                        <span class="text-danger" asp-validation-for="@Model.Contact.Map"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input type="file" asp-for="Photos" class="form-control" placeholder="Photo">
                        <span class="text-danger" asp-validation-for="Photos"></span>
                    </div>


                    <button type="submit" class="btn bg-blue-800">Submit<i class="icon-ml-2"></i></button>
                </form>
            </div>
        </div>
    </div>

</div>

