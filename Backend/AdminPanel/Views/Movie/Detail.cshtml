@{
    ViewData["Title"] = "Detail";
    MovieParams movieParams = Model;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">

            <h2 class="mt-0 header-title">Movie Details</h2>


            <div class="table-responsive">
                <form>
                    <input disabled value="@movieParams.LanguageName" name="LanguageId" 
                           id="language" class="btn btn-secondary" style="margin-bottom: 5px">

                </form>
                <table class="table table-bordered mb-0">
                    <tbody>
                        <tr>
                            <th scope="row">Name</th>
                            <td>
                                @movieParams.Name
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Age</th>
                            <td>
                                @movieParams.Age
                            </td>
                        </tr>                       
                        <tr>
                            <th scope="row">Trailer</th>
                            <td>
                                @movieParams.Treyler
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Country</th>
                            <td>
                                @movieParams.Country
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Director</th>
                            <td>
                                @movieParams.Director
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Actors</th>
                            <td>
                                @movieParams.Actors
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Duration</th>
                            <td>
                                @movieParams.Duration
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Genre</th>
                            <td>
                                @movieParams.Genre
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">About</th>
                            <td>
                                @movieParams.About
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Start Time</th>
                            <td>
                                @movieParams.StartTime
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">End Time</th>
                            <td>
                                @movieParams.EndTime
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Image</th>
                            <td>
                                <div class="form-group form-group-float">
                                    <img src="/Uploads/@movieParams.Image" width="250" />
                                    <input type="hidden" name="oldPhoto" value="@movieParams.Image" />
                                </div>
                            </td>
                        </tr>


                    </tbody>
                </table>

                <a asp-action="Index" class="btn btn-secondary" style="margin-top: 5px">
                    Go Back
                </a>
            </div>
        </div>
    </div>

</div>



