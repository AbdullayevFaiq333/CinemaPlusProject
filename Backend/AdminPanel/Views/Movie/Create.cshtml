@model MovieParams


@{
    ViewData["Title"] = "Create";
}

<div class="content text-center">
    <form method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="Movie">

        <div class="col-lg-5" style="display: inline-block">
            <div class="card">
                <div class="card-header header-elements-inline">
                    <h5 class="card-title">Create Movie</h5>
                </div>

                <div class="card-body">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <select name="LanguageId" id="language" class="btn btn-light">
                        @foreach (var item in ViewBag.Languages)
                        {
                            <option value="@item.Id"> @item.Code</option>

                        }
                    </select>
                    <a asp-action="Index" class="btn btn-light">
                        Go Back
                    </a>

                    <div class="form-group form-group-float">
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input asp-for="Age" class="form-control" placeholder="Age" min="1">
                        <span class="text-danger" asp-validation-for="Age"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input type="datetime-local" asp-for="StartTime" class="form-control" placeholder="Start Time">
                        <span class="text-danger" asp-validation-for="StartTime"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input type="datetime-local" asp-for="EndTime" class="form-control" placeholder="End Time">
                        <span class="text-danger" asp-validation-for="EndTime"></span>
                    </div>

                    <div class="form-group form-group-float">
                        <input type="file" asp-for="Photo" class="form-control" placeholder="Photo">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                    </div>
                    <button type="submit" class="btn bg-blue-800">Submit<i class="icon-ml-2"></i></button>
                </div>
            </div>
        </div>
        <div class="col-lg-5" style="display:inline-block">
            <div class="card">
                <div class="card-header header-elements-inline">
                    <h5 class="card-title">Movie Details</h5>
                </div>

                <div class="card-body">


                    <div class="form-group form-group-float">
                        <input asp-for="About" class="form-control" placeholder="About">
                        <span class="text-danger" asp-validation-for="About"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input asp-for="Actors" class="form-control" placeholder="Actors">
                        <span class="text-danger" asp-validation-for="Actors"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input asp-for="Country" class="form-control" placeholder="Country">
                        <span class="text-danger" asp-validation-for="Country"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input asp-for="Duration" class="form-control" placeholder="Duration">
                        <span class="text-danger" asp-validation-for="Duration"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input asp-for="Director" class="form-control" placeholder="Director">
                        <span class="text-danger" asp-validation-for="Director"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input asp-for="Genre" class="form-control" placeholder="Genre">
                        <span class="text-danger" asp-validation-for="Genre"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input asp-for="Treyler" class="form-control" placeholder="Trailer">
                        <span class="text-danger" asp-validation-for="Treyler"></span>
                    </div>


                </div>
            </div>
        </div>
</form>
</div>

