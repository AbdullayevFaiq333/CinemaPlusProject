
@{
    ViewData["Title"] = "Detail";
    Platinium platinium = Model;
}



<div class="col-lg-12">
    <div class="card">
        <div class="card-body">

            <h2 class="mt-0 header-title">Platinum Details</h2>


            <div class="table-responsive">
                <form>
                    <select name="LanguageId" id="language" class="btn btn-secondary" style="margin-bottom: 5px">

                        @foreach (var item in ViewBag.Languages)
                        {

                            <!option value="@item.Id" @(item.Id == Model.LanguageId ? "selected" : "")> @item.Code</!option>

                        }


                    </select>

                </form>
                <table class="table table-bordered mb-0">

                    <thead>
                        <tr>
                            <th>Title & Description </th>
                            <th>Icon </th>

                        </tr>
                    </thead>
                    <tbody>

                        <tr>

                            <td>
                                <div data-toggle="modal" data-target="#exampleModalLong" style="cursor: pointer">
                                    @platinium.Title


                                </div>
                                <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">Description</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body" style="background-color: midnightblue; color: white">

                                                @platinium.Description

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td style="text-align: center">
                                <div class="form-group form-group-float">   
                                    <img src="/Uploads/@platinium.Icon" width="50" />
                                    <input type="hidden" name="oldPhoto" value="@platinium.Icon" />
                                </div>
                            </td>

                        </tr>

                    </tbody>
                </table>
                <a asp-action="Index" class="btn btn-secondary" style="margin-top: 5px">
                    Go Back
                </a>
            </div>
        </div>
    </div>
</div>

